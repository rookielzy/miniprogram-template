.category-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  box-sizing: border-box;
  margin-top: 70rpx;
}

.search-component {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
}

.category-main__container {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-top: 1rpx solid #DCDFE6;
  height: 100%;
}

.category-menu, .category-menu scroll-view {
  width: 120px;
  height: 100%;
}

.category-menu scroll-view {
  display: flex;
  flex-flow: column;
  border-right: 1rpx solid #DCDFE6;
  overflow-y: auto;
}

.category-menu view {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 10rpx 0 40rpx 0;
}

.category-submenu__container {
  flex: 1;
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  overflow: hidden;
}

.category-submenu {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.2s ease-in;
}

.category-submenu scroll-view {
  width: 80%;
  height:170rpx;
}

.category-submenu scroll-view image {
  width: 100%;
  height:170rpx;
}

.submenu-container {
  flex: 1;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.submenu-container > .submenu-item {
  width: 33.33%;
  height: 150rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
}

.submenu-item image {
  width: 80%;
  height: 80%;
  border-radius: 10rpx;
}